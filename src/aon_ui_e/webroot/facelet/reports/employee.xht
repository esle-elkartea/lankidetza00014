<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:t="http://myfaces.apache.org/tomahawk"
	xmlns:h="http://java.sun.com/jsf/html">
<body>
<ui:composition template="/facelet/templates/aon.ui.form.xhtml">

	<ui:define name="content">

		<h:form id="incidencesForm">

			<!--  toolbar navigation -->
			<t:div id="aon-content-toolbar" forceId="#{true}" styleClass="aon-content-toolbar" >
				<t:div styleClass="aon-content-toolbar-internal">
					<t:div styleClass="aon-content-toolbar-item-group">
						<t:commandButton id="search" value="#{bundle.aon_search}"
							actionListener="#{hourssummary.onReportHours}" 
							forceId="#{true}"
							styleClass="aon-content-toolbar-item aon-content-toolbar-item-search"
							onmouseover="this.className='aon-content-toolbar-item aon-content-toolbar-item-hover aon-content-toolbar-item-search'"
							onmouseout="this.className='aon-content-toolbar-item aon-content-toolbar-item-search'" 
							accesskey="#{bundle.aon_key_search}"/>
					</t:div>
				</t:div>
			</t:div>
		
			<t:div id="aon-scroll-area" forceId="#{true}">
				<t:div styleClass="aon-scroll-area-internal">
					<!-- start of bag panel -->
					<!-- start of flow layout -->
					
					<t:div styleClass="aon-form-group">
						<t:div styleClass="aon-form-group-title" >
							<h:outputText value="#{bundle.aon_search_header}" />
						</t:div>
						<t:div styleClass="aon-form-group-body">

							<h:panelGrid columns="2" cellpadding="0" cellspacing="0"
										styleClass="aon-form-table"
										columnClasses="aon-form-table-column-odd,aon-form-table-column-even">
								<h:outputLabel for="Employee_id" styleClass="aon-form-input-text-label"
									value="#{appBundle.aon_employee}" />
								<h:selectOneMenu id="Employee_id" styleClass="aon-form-selectOneMenu-field"
										value="#{hourssummary.employee.id}" 
										valueChangeListener="#{hourssummary.employeeChanged}" >
									<f:selectItems value="#{hourssummary.employees}" />
								</h:selectOneMenu>
							</h:panelGrid>

						</t:div>
					</t:div>					

					<t:div styleClass="aon-form-group" rendered="#{hourssummary.hours > 0}">
						<t:div styleClass="aon-form-group-title" >
							<h:outputText value="Informe" />
						</t:div>
						<t:div styleClass="aon-form-group-body">

							<h:panelGrid columns="2" cellpadding="0" cellspacing="0"
										styleClass="aon-form-table"
										columnClasses="aon-form-table-column-odd,aon-form-table-column-even" >

								<h:outputLabel for="Employee_agreement" styleClass="aon-form-input-text-label" 
									value="#{appBundle.aon_agreement_time}" />
								<h:outputText id="Employee_agreement" size="4" 
									value="#{hourssummary.employee.agreementTime}" />

								<h:outputLabel for="Employee_hours" styleClass="aon-form-input-text-label" 
									value="#{appBundle.aon_working_time}" />
								<h:outputText id="Employee_hours" size="4" 
									value="#{hourssummary.hours}" />

								<h:outputLabel for="Incidence_equal" styleClass="aon-form-input-text-label" 
									value="Horas Permiso Retribuido" />
								<h:outputText id="Incidence_equal" size="4" 
									value="#{hourssummary.incidenceEqual}" />

								<h:outputLabel for="Incidence_plus" styleClass="aon-form-input-text-label" 
									value="Horas a sumar" />
								<h:outputText id="Incidence_plus" size="4" 
									value="#{hourssummary.incidencePlus}" />

								<h:outputLabel for="Incidence_minus" styleClass="aon-form-input-text-label" 
									value="Horas a restar" />
								<h:outputText id="Incidence_minus" size="4" 
									value="#{hourssummary.incidenceMinus}" />

								<h:outputLabel for="Employee_real_hours" styleClass="aon-form-input-text-label" 
									value="Horas Reales" />
								<h:outputText id="Employee_real_hours" size="4" 
									value="#{hourssummary.hours + hourssummary.incidencePlus - (hourssummary.incidenceEqual + hourssummary.incidenceMinus) }" />

							</h:panelGrid>

						</t:div>
					</t:div>				
				</t:div>
			</t:div>
		
		</h:form>

	</ui:define>

</ui:composition>
</body>
</html>
