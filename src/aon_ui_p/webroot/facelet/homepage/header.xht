<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:t="http://myfaces.apache.org/tomahawk"
	xmlns:h="http://java.sun.com/jsf/html">
<body>

<ui:composition template="/facelet/templates/aon.ui.frame.xhtml">

	<ui:define name="content">

		<f:loadBundle basename="#{facesContext.application.messageBundle}" var="bundle" />
		<f:loadBundle basename="com.code.aon.ui.employee.i18n.menu" var="menuBundle" />
		
		<t:div styleClass="aon-header-container">
			<h:panelGrid columns="2" styleClass="aon-header-top"
				columnClasses="aon-header-top-left,aon-header-top-right" dir="true">
				<h:panelGroup>
					<f:verbatim>&#160;</f:verbatim>
				</h:panelGroup>
				<h:panelGroup>
					<h:graphicImage url="/images/header/aon-header-top-right-int.gif"
						alt="" />
				</h:panelGroup>
			</h:panelGrid>

			<h:panelGrid columns="2" styleClass="aon-header-middle"
				columnClasses="aon-header-middle-left,aon-header-middle-right"
				dir="true">
				<h:panelGroup>
					<t:div id="aon-application">
						<t:div id="aon-logo" style="padding:0;">
							<h:graphicImage
								url="#{aonConfiguration.applicationLogoContextRelativePath}"
								alt="#{bundle.aon_application_title}" style="height:52px;"/>
						</t:div>
						<t:div id="aon-application-name" style="position: relative; left: -35px; top: 35px;  color: #A7A7A8;font-weight:bold;">
							<h:outputText value="#{bundle.aon_application_title}" />
						</t:div>
					</t:div>
				</h:panelGroup>
				<h:panelGroup>
					<t:div styleClass="aon-header-middle-right-int">
						<t:div styleClass="aon-header-menu">
							<t:div styleClass="aon-header-menu-item">
								<h:outputLink styleClass="aon-header-menu-item-link"
									target="_top" 
									value="${facesContext.externalContext.requestContextPath}">
									<h:outputText value="#{bundle.aon_home}" />
								</h:outputLink>
							</t:div>
						
							<t:div styleClass="aon-header-menu-item">
								<h:outputLink styleClass="aon-header-menu-item-link"
									onclick="window.open('${facesContext.externalContext.requestContextPath}/facelet/about/accelerators.faces','','height=401,width=500,status=no,toolbar=no,menubar=no,location=no');"
									value="#">
									<h:outputText value="#{bundle.aon_help}" />
								</h:outputLink>
							</t:div>
							<t:div styleClass="aon-header-menu-item">
								<h:outputLink styleClass="aon-header-menu-item-link" style="border-right:0;"
									onclick="window.open('${facesContext.externalContext.requestContextPath}/facelet/about/content.faces','','height=401,width=505,status=no,toolbar=no,menubar=no,location=no,resizable=no');"
									value="#" >
									<h:outputText value="#{bundle.aon_about}"  />
								</h:outputLink>
							</t:div>
						</t:div>						
					</t:div>
					<t:div styleClass="aon-header-information">
						<t:div styleClass="aon-header-information-item">							
							<h:outputText value="#{bundle.aon_user}: "  styleClass="aon-header-information-description"/>
							<h:outputText value="#{user.user.name}" styleClass="aon-header-information-item" />
						</t:div>
					</t:div>
				</h:panelGroup>
			</h:panelGrid>
			<t:div styleClass="aon-header-bottom">
				<h:graphicImage url="/images/header/aon-header-bottom-right.gif"
					alt="" />
			</t:div>
		</t:div>

	</ui:define>

</ui:composition>
</body>
</html>
