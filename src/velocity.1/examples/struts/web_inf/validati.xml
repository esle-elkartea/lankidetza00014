<form-validation>
   <formset>
      <form name="emailForm">
         <field property="email"
         	depends="required,email">
            	<msg name="email" key="errors.invalid"/>
        	<arg0 key="emailForm.label.email"/>
	 </field>
      </form>
   </formset>
</form-validation>
