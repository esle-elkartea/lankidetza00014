<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:t="http://myfaces.apache.org/tomahawk"
	xmlns:h="http://java.sun.com/jsf/html">
<body>

<ui:composition template="/facelet/templates/aon.ui.form.xhtml">
	<ui:define name="content">
		<h:form id="courseList">

			<t:div styleClass="aon-content-toolbar" forceId="#{true}"
				id="aon-content-toolbar">
				<t:div styleClass="aon-content-toolbar-internal">
				<t:div styleClass="aon-content-toolbar-item-group">
					<t:commandButton id="reset" value="#{bundle.aon_reset}"
						action="course_form" actionListener="#{course.onReset}"
						styleClass="aon-content-toolbar-item aon-content-toolbar-item-new"
						onmouseover="this.className='aon-content-toolbar-item aon-content-toolbar-item-hover aon-content-toolbar-item-new'"
						onmouseout="this.className='aon-content-toolbar-item aon-content-toolbar-item-new'" 
						accesskey="#{bundle.aon_key_new}"/>
					<t:commandButton id="search" value="#{bundle.aon_search}"
						action="course_search"  actionListener="#{course.onEditSearch}"
						styleClass="aon-content-toolbar-item aon-content-toolbar-item-search"
						onmouseover="this.className='aon-content-toolbar-item aon-content-toolbar-item-hover aon-content-toolbar-item-search'"
						onmouseout="this.className='aon-content-toolbar-item aon-content-toolbar-item-search'" 
						accesskey="#{bundle.aon_key_search}"/>
					<t:commandButton id="courseList" value="#{bundle.aon_listing}"
						forceId="#{true}"
						onclick="reportWindow(this, 'placeList', '${facesContext.externalContext.requestContextPath}/facelet/report/preferences.faces');return false;"
						styleClass="aon-content-toolbar-item aon-content-toolbar-item-print"
						onmouseover="this.className='aon-content-toolbar-item aon-content-toolbar-item-hover aon-content-toolbar-item-print'"
						onmouseout="this.className='aon-content-toolbar-item aon-content-toolbar-item-print'"
						accesskey="#{bundle.aon_key_print}" />
					<t:commandButton id="courseDetailList" value="#{appBundle.aon_detail_listing}"
						forceId="#{true}"
						onclick="reportWindow(this, 'placeList', '${facesContext.externalContext.requestContextPath}/facelet/report/preferences.faces');return false;"
						styleClass="aon-content-toolbar-item aon-content-toolbar-item-print"
						onmouseover="this.className='aon-content-toolbar-item aon-content-toolbar-item-hover aon-content-toolbar-item-print'"
						onmouseout="this.className='aon-content-toolbar-item aon-content-toolbar-item-print'"
						accesskey="#{bundle.aon_key_print}" />
					<t:commandButton id="markTemplateList" value="#{appBundle.aon_notes_listing}"
						forceId="#{true}"
						onclick="reportWindow(this, 'placeList', '${facesContext.externalContext.requestContextPath}/facelet/report/preferences.faces');return false;"
						styleClass="aon-content-toolbar-item aon-content-toolbar-item-print"
						onmouseover="this.className='aon-content-toolbar-item aon-content-toolbar-item-hover aon-content-toolbar-item-print'"
						onmouseout="this.className='aon-content-toolbar-item aon-content-toolbar-item-print'"
						accesskey="#{bundle.aon_key_print}" />
				</t:div>
				</t:div>
			</t:div>
			<t:div forceId="#{true}" id="aon-scroll-area">
				<t:div styleClass="aon-scroll-area-internal">
					<t:div styleClass="aon-table-hack">
						<t:dataTable id="courseDataList" cellpadding="0" cellspacing="0"
							var="to" value="#{course.model}" rows="20"
							rendered="#{course.model.rowCount > 0}"
							styleClass="aon-table" headerClass="aon-table-header"
							rowClasses="aon-table-row-odd,aon-table-row-even"
							columnClasses="aon-table-body aon-table-body-string,aon-table-body aon-table-body-string,aon-table-body aon-table-body-string,aon-table-body aon-table-body-string"
							rowOnMouseOver="selectRow( this )"
							rowOnMouseOut="unselectRow( this )" rowOnClick="sendRow( this )">

							<h:column>
								<f:facet name="header">
									<h:outputText value="#{appBundle.course_code}" />
								</f:facet>
								<t:commandLink immediate="#{true}"
									styleClass="aon-table-row-selected" action="course_form"
									actionListener="#{course.onSelect}" />
								<h:outputText value="#{to.code}" />
								<f:verbatim>&#160;</f:verbatim>
							</h:column>

							<h:column>
								<f:facet name="header">
									<h:panelGroup>
										<h:outputText value="#{appBundle.course_academic_year}" />
									</h:panelGroup>
								</f:facet>
								<h:outputText value="#{to.academicYear.description}" />
								<f:verbatim>&#160;</f:verbatim>
							</h:column>
							<h:column>
								<f:facet name="header">
									<h:panelGroup>
										<h:outputText value="#{appBundle.course_subject}" />
									</h:panelGroup>
								</f:facet>
								<h:outputText value="#{to.courseSubject.description}" />
								<f:verbatim>&#160;</f:verbatim>
							</h:column>
							<h:column>
								<f:facet name="header">
									<h:panelGroup>
										<h:outputText value="#{appBundle.course_level}" />
									</h:panelGroup>
								</f:facet>
								<h:outputText value="#{to.courseLevel.description}" />
								<f:verbatim>&#160;</f:verbatim>
							</h:column>
							<h:column>
								<f:facet name="header">
									<h:panelGroup>
										<h:outputText value="#{appBundle.course_workplace}" />
									</h:panelGroup>
								</f:facet>
								<h:outputText value="#{to.workPlace.description}" />
								<f:verbatim>&#160;</f:verbatim>
							</h:column>
							<h:column>
								<f:facet name="header">
									<h:panelGroup>
										<h:outputText value="#{appBundle.course_status}" />
									</h:panelGroup>
								</f:facet>
								<h:outputText value="#{to.status}" />
								<f:verbatim>&#160;</f:verbatim>
							</h:column>
						</t:dataTable>
					</t:div>

					<ui:include src="/facelet/shared/dataScroller.xhtml">
						<ui:param name="dataTable" value="courseDataList" />
						<ui:param name="model" value="#{course.model}" />
						<ui:param name="showNote" value="#{true}" />
					</ui:include>
					
				</t:div>
			</t:div>
		</h:form>
		<h:form id="placeList" target="list" />

	</ui:define>

</ui:composition>

</body>
</html>