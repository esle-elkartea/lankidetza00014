<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:t="http://myfaces.apache.org/tomahawk"
	xmlns:h="http://java.sun.com/jsf/html">
<body>

<ui:composition>

	<t:div styleClass="aon-content-subtitle" id="aon-content-subtitle"
		forceId="#{true}">
		<t:div styleClass="aon-content-subtitle-internal">
		<h:outputText value="#{bundle.aon_search_header}" />
		</t:div>
	</t:div>
	
	<t:div forceId="#{true}" id="aon-scroll-area">
		<t:div styleClass="aon-scroll-area-internal">
			<h:panelGrid columns="2" styleClass="aon-form-table"
				columnClasses="aon-form-table-column-odd,aon-form-table-column-even">

				<t:outputLabel for="Customer_registry_document"
					value="#{registryBundle.aon_nif}"
					styleClass="aon-form-input-text-label aon-form-table-column-odd-label" />
				<t:inputText id="Customer_registry_document" size="20"
					valueChangeListener="#{customerAlias.addExpression}"
					styleClass="aon-form-input-text" onblur="toUpperCase(this);"/>

				<t:outputLabel for="Customer_registry_name"
					value="#{registryBundle.aon_name}"
					styleClass="aon-form-input-text-label aon-form-table-column-odd-label" />
				<t:inputText id="Customer_registry_name" size="40"
					valueChangeListener="#{customerAlias.addExpression}"
					styleClass="aon-form-input-text" />

				<t:outputLabel for="Customer_registry_surname"
					value="#{registryBundle.aon_surname}"
					styleClass="aon-form-input-text-label aon-form-table-column-odd-label" />
				<t:inputText id="Customer_registry_surname" size="40"
					valueChangeListener="#{customerAlias.addExpression}"
					styleClass="aon-form-input-text" />

				<t:outputLabel for="Customer_customerSegment_id"
					value="#{appBundle.aon_alumn_segment}"
					styleClass="aon-form-input-text-label aon-form-table-column-odd-label" />
				<h:selectOneMenu id="Customer_customerSegment_id"
					styleClass="aon-form-selectOneMenu-field"
					converter="IntegerEmptyConverter" forceId="#{true}"
					valueChangeListener="#{customerAlias.addExpression}">
					<f:selectItem itemDisabled="true" itemLabel="-" itemValue="" />
					<f:selectItems value="#{customerCollections.customerSegments}" />
				</h:selectOneMenu>

				<t:outputLabel for="Customer_status"
					value="#{registryBundle.aon_status}"
					styleClass="aon-form-input-text-label aon-form-table-column-odd-label" />
				<h:selectOneMenu id="Customer_status"
					styleClass="aon-form-selectOneMenu-field"
					converter="aonCustomerStatusConverter" forceId="#{true}"
					valueChangeListener="#{customerAlias.addExpression}">
					<f:selectItems value="#{customerCollections.customerStatuses}" />
				</h:selectOneMenu>

				<t:outputLabel for="CourseAlumn"
					value="#{appBundle.course_course} #{appBundle.course_code}"
					styleClass="aon-form-input-text-label aon-form-table-column-odd-label" />
				<t:inputText id="CourseAlumn" size="20"
					valueChangeListener="#{courseAlumnSearcher.addCourseExpression}"
					styleClass="aon-form-input-text" />
				
			</h:panelGrid>
		</t:div>
	</t:div>

</ui:composition>

</body>
</html>