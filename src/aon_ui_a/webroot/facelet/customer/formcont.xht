<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
	xmlns:jstl="http://java.sun.com/jstl/core"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:t="http://myfaces.apache.org/tomahawk"
	xmlns:h="http://java.sun.com/jsf/html">
<body>

<ui:composition>

	<t:div styleClass="aon-content-subtitle" id="aon-content-subtitle"
		forceId="#{true}">
		<t:div styleClass="aon-content-subtitle-internal">
			<h:outputText
				value="#{customerAlias.new?(bundle.aon_reset):(bundle.aon_editing)}" />
		</t:div>
	</t:div>

	<t:div id="aon-scroll-area" forceId="#{true}">
		<t:div styleClass="aon-scroll-area-internal">
			<h:panelGrid columns="2">
				<h:panelGrid columns="2" cellpadding="0" cellspacing="0"
					styleClass="aon-form-table"
					columnClasses="aon-form-table-column-odd,aon-form-table-column-even">

					<h:outputLabel for="Customer_id"
						styleClass="aon-form-input-text-label"
						value="#{customerBundle.customer_code}" />
					<t:div>	
						<h:inputText id="Customer_id" value="#{customerAlias.to.id}"
							styleClass="aon-form-input-text" forceId="#{true}"
							required="#{true}" size="15" disabled="#{true}" />
						<h:outputLabel for="Customer_status"
							styleClass="aon-form-input-text-label"
							value="#{customerBundle.customer_status}" />
						<h:selectOneMenu id="Customer_status"
							styleClass="aon-form-selectOneMenu-field"
							value="#{customerAlias.to.status}">
							<f:selectItems value="#{customerCollections.customerStatuses}" />
						</h:selectOneMenu>
					</t:div>
					
					<t:outputLabel for="Customer_document"
						styleClass="aon-form-input-text-label"
						value="#{customerBundle.customer_document}" />
					<t:inputText id="Customer_document"
						styleClass="aon-form-input-text" forceId="#{true}"
						onblur="toUpperCase(this);"
						value="#{customerAlias.to.registry.document}" size="16"
						required="#{true}">
						<f:validateLength minimum="1" maximum="16" />
					</t:inputText>

					<t:outputLabel for="Customer_name"
						styleClass="aon-form-input-text-label"
						value="#{customerBundle.customer_name}" />
					<t:inputText id="Customer_name" styleClass="aon-form-input-text"
						forceId="#{true}" value="#{customerAlias.to.registry.name}"
						size="64" required="#{true}">
						<f:validateLength minimum="1" maximum="64" />
					</t:inputText>

					<t:outputLabel for="Customer_surname"
						styleClass="aon-form-input-text-label"
						value="#{customerBundle.customer_surname}" />
					<t:inputText id="Customer_surname" styleClass="aon-form-input-text"
						forceId="#{true}" value="#{customerAlias.to.registry.surname}"
						size="64">
						<f:validateLength minimum="1" maximum="64" />
					</t:inputText>

					<h:outputLabel for="Customer_scope_id"
						styleClass="aon-form-input-text-label"
						value="#{customerBundle.customer_scope}" />
					<h:selectOneMenu id="Customer_scope_id"
						styleClass="aon-form-selectOneMenu-field"
						value="#{customerAlias.to.scope.id}">
						<f:selectItems value="#{configCollections.scopes}" />
					</h:selectOneMenu>

				</h:panelGrid>

				<h:panelGrid columns="2" cellpadding="0" cellspacing="0"
					styleClass="aon-form-table"
					columnClasses="aon-form-table-column-odd,aon-form-table-column-even">

					<h:outputLabel for="Customer_customerSegment_id"
						styleClass="aon-form-input-text-label"
						value="#{appBundle.aon_alumn_segment}" />
					<h:selectOneMenu id="Customer_customerSegment_id"
						styleClass="aon-form-selectOneMenu-field"
						value="#{customerAlias.to.customerSegment.id}">
						<f:selectItems value="#{customerCollections.customerSegments}" />
					</h:selectOneMenu>

					<h:outputLabel for="Customer_Person_BirthDate"
						styleClass="aon-form-input-text-label"
						value="#{registryBundle.aon_birth_date}" />
					<t:inputCalendar id="Customer_Person_BirthDate" size="8"
						required="true" value="#{customerAlias.person.birthDate}"
						monthYearRowClass="yearMonthHeader" weekRowClass="weekHeader"
						currentDayCellClass="currentDayCell" renderAsPopup="true"
						styleClass="aon-form-input-text"
						popupButtonStyleClass="aon-form-calendar-button"
						popupTodayString="#{bundle.aon_popup_today}"
						popupWeekString="#{bundle.aon_popup_week}" />

					<h:outputLabel for="Customer_Person_Gender"
						styleClass="aon-form-input-text-label"
						value="#{registryBundle.aon_gender}" />
					<h:selectOneMenu id="Customer_Person_Gender"
						styleClass="aon-form-selectOneMenu-field"
						value="#{customerAlias.person.gender}">
						<f:selectItems value="#{registryCollections.genders}" />
					</h:selectOneMenu>

					<h:outputLabel for="Customer_Person_MaritalStatus"
						styleClass="aon-form-input-text-label"
						value="#{registryBundle.aon_marital_status}" />
					<h:selectOneMenu id="Customer_Person_MaritalStatus"
						styleClass="aon-form-selectOneMenu-field"
						value="#{customerAlias.person.maritalStatus}">
						<f:selectItems value="#{registryCollections.maritalStatuses}" />
					</h:selectOneMenu>

				</h:panelGrid>
				
			</h:panelGrid>

				<h:panelGrid columns="2" cellpadding="0" cellspacing="0"
					styleClass="aon-form-table"
					columnClasses="aon-form-table-column-odd,aon-form-table-column-even">
					
					<h:outputLabel for="Observation"
						styleClass="aon-form-input-text-label"
						value="#{appBundle.aon_alumn_observation}" />
					<t:inputTextarea id="Observation"
						forceId="#{true}" 
						styleClass="aon-form-input-text"
						cols="95" rows="5"
						value="#{customerObservation.observation.comments}" />
					
				</h:panelGrid>


			<ui:include src="/facelet/customer/academic_data/grid.xhtml" />

			<ui:include src="/facelet/customer/loan/grid.xhtml" />

		</t:div>
	</t:div>

</ui:composition>

</body>
</html>
